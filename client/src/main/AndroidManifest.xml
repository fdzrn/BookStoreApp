<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bookstore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".client.di.BaseApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".client.ui.signin.SignInActivity"
            android:theme="@style/AppTheme.SignIn" />
        <activity android:name=".client.ui.main.MainActivity" />
        <activity android:name=".client.ui.search.SearchBookActivity" />
        <activity android:name=".client.ui.book.DetailBookActivity" />
        <activity android:name=".client.ui.wishlist.WishlistActivity" />
        <activity android:name=".client.ui.settings.SettingsActivity" />
        <activity android:name=".client.ui.checkout.CheckoutActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>